<%= form_with(model: cabinet) do |f| %>
  <% if cabinet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(cabinet.errors.count, "組閣できませんでした") %></h2>

      <ul>
        <% cabinet.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <p class="text-center">タイトル</p>
  <h2 class="text-center"><%= f.text_field :title_cabinet %>内閣</h2>
  
  <table class="table">
    <tr>
      <th>職名</th>
      <th>氏名</th>
    </tr>
    <tr>
      <td><%= f.label :prime_minister_name, "内閣総理大臣" %></td>
      <td><%= f.text_field :prime_minister_name %></td>
    </tr>
    <tr>
      <td><%= f.label :chief_cabinet_secretary_name, "内閣官房長官" %></td>
      <td><%= f.text_field :chief_cabinet_secretary_name %></td>
    </tr>
    <tr>
      <td><%= f.label :finance_minister_name, "財務大臣" %></td>
      <td><%= f.text_field :finance_minister_name %></td>
    </tr>
    <tr>
      <td><%= f.label :comprehensive_minister_name, "総務大臣" %></td>
      <td><%= f.text_field :comprehensive_minister_name %></td>
    </tr>
    <tr>
      <td><%= f.label :economy_minister_name, "経済産業大臣" %></td>
      <td><%= f.text_field :economy_minister_name %></td>
    </tr>
    <tr>
      <td><%= f.label :welfare_minister_name, "厚生労働大臣" %></td>
      <td><%= f.text_field :welfare_minister_name %></td>
    </tr>
    <tr>
      <td><%= f.label :education_minister_name, "文部科学大臣" %></td>
      <td><%= f.text_field :education_minister_name %></td>
    </tr>
    <tr>
      <td><%= f.label :diplomacy_minister_name, "外務大臣" %></td>
      <td><%= f.text_field :diplomacy_minister_name %></td>
    </tr>
    <tr>
      <td><%= f.label :defense_minister_name, "防衛大臣" %></td>
      <td><%= f.text_field :defense_minister_name %></td>
    </tr>
    <tr>
      <td><%= f.label :agriculture_minister_name, "農林水産大臣" %></td>
      <td><%= f.text_field :agriculture_minister_name %></td>
    </tr>
    <tr>
      <td><%= f.label :traffic_minister_name, "国土交通大臣" %></td>
      <td><%= f.text_field :traffic_minister_name %></td>
    </tr>
    <tr>
      <td><%= f.label :law_minister_name, "法務大臣" %></td>
      <td><%= f.text_field :law_minister_name %></td>
    </tr>
    <tr>
      <td><%= f.label :green_minister_name, "環境大臣" %></td>
      <td><%= f.text_field :green_minister_name %></td>
    </tr>
    <tr>
      <td><%= f.label :digital_minister_name, "デジタル大臣" %></td>
      <td><%= f.text_field :digital_minister_name %></td>
    </tr>
    <tr>
      <td><%= f.label :reconstruction_minister_name, "復興大臣" %></td>
      <td><%= f.text_field :reconstruction_minister_name %></td>
    </tr>
    <tr>
      <td><%= f.label :public_security_minister_name, "国家公安委員長" %></td>
      <td><%= f.text_field :public_security_minister_name %></td>
    </tr>
  </table>
  
  <%= f.submit "組閣", class: "btn btn-sm", style: "background-color: gray;" %>
<% end %>